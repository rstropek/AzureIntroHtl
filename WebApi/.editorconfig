# EditorConfig is a file format for defining coding styles
# https://editorconfig.org/

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
max_line_length = 150
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2
